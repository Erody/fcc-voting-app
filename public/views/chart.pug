    script(type="text/javascript").
        const title = "#{title}" || "Test title";
        const chartOptions = !{JSON.stringify(options)};
    script(src= "/static/scripts/chart.js", type= "text/javascript")

block content
    .flex-center-row.chart
        section
            h1#chartHeader
            canvas#myChart
            a(href=urlId + "/vote").btn.btn-primary Vote
